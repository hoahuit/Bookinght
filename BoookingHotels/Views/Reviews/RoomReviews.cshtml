@model List<BoookingHotels.Models.Review>
@{
    ViewData["Title"] = "Room Reviews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <h2 class="fw-bold mb-4">
        <i class="fa-solid fa-comments text-primary"></i> Đánh giá phòng
    </h2>

    @if (Model != null && Model.Any())
    {
        foreach (var rv in Model)
        {
            <div class="card mb-3 shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h6 class="fw-bold mb-0">@rv.User.FullName (@rv.User.Email)</h6>
                        <div>
                            @for (int i = 1; i <= 5; i++)
                            {
                                <i class="fa-star @(i <= rv.Rating ? "fas text-warning" : "far text-muted")"></i>
                            }
                        </div>
                    </div>
                    <p>@rv.Comment</p>

                    @if (rv.Photos != null && rv.Photos.Any())
                    {
                        <div class="d-flex flex-wrap gap-2 mt-2">
                            @foreach (var p in rv.Photos)
                            {
                                <img src="@p.Url" style="width:120px; height:90px; object-fit:cover;"
                                     class="rounded shadow-sm" />
                            }
                        </div>
                    }

                    <small class="text-muted">Ngày @rv.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info">Chưa có đánh giá nào cho phòng này.</div>
    }
</div>
