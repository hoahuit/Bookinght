@using System.Security.Claims
@model IEnumerable<BoookingHotels.Models.Voucher>

@{
    ViewData["Title"] = ViewData["Title"] ?? "My Vouchers";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var userIdClaim = User.FindFirst(ClaimTypes.NameIdentifier);
    var userId = userIdClaim != null ? int.Parse(userIdClaim.Value) : 0;
    var mode = ViewData["Title"].ToString() == "Voucher đã dùng" ? "used" : "available";
}

<style>
    .used-stamp {
        position: absolute;
        top: 20px;
        right: -20px;
        background-color: rgba(220, 53, 69, 0.9);
        color: white;
        font-weight: bold;
        padding: 12px 24px;
        transform: rotate(20deg);
        border-radius: 50%;
        font-size: 14px;
        box-shadow: 0 0 6px rgba(0,0,0,0.25);
        z-index: 10;
        width: 100px;
        height: 100px;
        text-align: center;
        line-height: 75px;
        border: 3px double white;
    }
</style>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0">
            <i class="bi bi-ticket-perforated"></i> @ViewData["Title"]
        </h2>

        @* <div>
            @if (mode == "used")
            {
                <a asp-controller="Vouchers" asp-action="MyVouchers" class="btn btn-primary">
                    <i class="bi bi-ticket"></i> Voucher khả dụng
                </a>
            }
            else
            {
                <a asp-controller="Vouchers" asp-action="VoucherUsed" class="btn btn-outline-secondary">
                    <i class="bi bi-clock-history"></i> Voucher đã dùng
                </a>
            }
        </div> *@
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Bạn chưa có voucher nào.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var v in Model)
            {
                var isUsed = v.UsedVoucherIds?.Any(uv => uv.UserId == userId) == true;

                <div class="col-md-4">
                    <div class="card shadow-sm border-0 rounded-3 h-100 position-relative">

                        @* Con dấu hình tròn nếu đã sử dụng *@
                        @if (isUsed)
                        {
                            <div class="used-stamp">Done</div>
                        }

                    <div class="card-body d-flex flex-column">
                        <h5 class="fw-bold text-dark mb-2">
                            <i class="bi bi-ticket-detailed text-danger"></i> @v.Code
                        </h5>
                        <p class="text-muted mb-1">@v.Description</p>
                        <p class="mb-1">
                            <b>Loại:</b>
                            @(v.DiscountType == "Percent"
                                                    ? $"{v.DiscountValue}%"
                                                    : $"{v.DiscountValue:N0} VND")
                    </p>
                    @if (v.MinOrderValue.HasValue)
                            {
                                <p class="mb-1"><b>Đơn tối thiểu:</b> @v.MinOrderValue.Value.ToString("N0") VND</p>
                            }
                            <p class="mb-1"><b>Hết hạn:</b> @v.ExpiryDate.ToString("dd/MM/yyyy")</p>
                            <p class="mb-1"><b>Số lượng còn lại:</b> @v.Quantity</p>

                            <span class="badge bg-@(v.UserId == null ? "info" : "success") mt-auto align-self-start">
                                @(v.UserId == null ? "Public" : "Của bạn")
                            </span>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
