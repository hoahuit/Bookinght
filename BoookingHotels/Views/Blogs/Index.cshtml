@model IEnumerable<BoookingHotels.Models.Blog>
@{
    ViewData["Title"] = "Travel Blog & Quảng Cáo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    .blog-hero {
        background: linear-gradient(rgba(0, 53, 128, 0.6), rgba(0, 53, 128, 0.6)), url('/Image/blogs/hero-travel.jpg') center/cover no-repeat;
        color: #fff;
        padding: 4rem 2rem;
        border-radius: 1rem;
        margin-bottom: 3rem;
        text-align: center;
    }

        .blog-hero h1 {
            font-size: 2.8rem;
            font-weight: 800;
        }

        .blog-hero p {
            font-size: 1.2rem;
            max-width: 700px;
            margin: 1rem auto 0;
        }

    .blog-card {
        border: none;
        max-width: 370px;
        border-radius: 1rem;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        background: #fff;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        transition: box-shadow 0.3s, transform 0.3s;
        min-width: 0;
        height: 100%;
    }

        .blog-card img {
            height: 220px;
            object-fit: cover;
            transition: transform 0.4s;
            width: 100%;
        }

        .blog-card:hover img {
            transform: scale(1.08);
        }

        .blog-card:hover {
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
            transform: translateY(-5px);
        }

    .blog-meta {
        font-size: 0.9rem;
        color: #6c757d;
        margin-bottom: 0.5rem;
    }

        .blog-meta i {
            color: #febb02;
        }

    .blog-title {
        font-weight: 700;
        margin: 0.75rem 0 0.5rem 0;
        font-size: 1.1rem;
        color: #003580;
    }

    .blog-card .card-body {
        display: flex;
        flex-direction: column;
        flex: 1 1 auto;
        padding: 1rem;
    }

    .blog-card .card-content {
        flex: 1 1 auto;
    }

    .blog-card .btn {
        margin-top: auto;
        align-self: flex-start;
        font-size: 0.95rem;
        padding: 0.35rem 1rem;
        border-radius: 0.5rem;
    }
</style>

<div class="container py-4">

    <!-- Hero section -->
    <div class="blog-hero shadow-lg">
        <h1><i class="fa-solid fa-earth-americas"></i> Travel Blog & Quảng Cáo</h1>
        <p>
            Khám phá điểm đến tuyệt vời, resort sang trọng và những trải nghiệm đáng nhớ.
            Chia sẻ cảm hứng du lịch cho chuyến đi của bạn!
        </p>
    </div>

    <!-- Blog posts -->
    <div class="row g-4 d-flex justify-content-start">
        @if (Model != null && Model.Any())
        {
            @foreach (var blog in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 d-flex">
                    <div class="card blog-card h-100 shadow-sm w-100">
                        <img src="@blog.Thumbnail" alt="@blog.Title" class="card-img-top" />
                        <div class="card-body">
                            <div class="card-content">
                                <div class="blog-meta mb-2">
                                    <i class="fa-regular fa-calendar"></i> @blog.CreatedDate.ToString("dd/MM/yyyy")
                                    <span class="ms-2"><i class="fa-solid fa-user-pen"></i> @blog.Author</span>
                                </div>
                                <h5 class="blog-title">@blog.Title</h5>
                                <p class="text-muted">
                                    @(string.IsNullOrEmpty(blog.ShortDescription)
                                                                ? (blog.Content?.Substring(0, Math.Min(blog.Content.Length, 100)) + "...")
                                                                : blog.ShortDescription)
                        </p>
                    </div>
                    <a asp-action="Detail" asp-route-id="@blog.BlogId" class="btn btn-outline-primary btn-sm">
                        <i class="fa-solid fa-arrow-right"></i> Đọc thêm
                    </a>
                </div>
            </div>
        </div>
                }
        }
        else
        {
            <div class="col-12 text-center py-5">
                <h5 class="text-muted">Hiện chưa có bài viết nào.</h5>
            </div>
        }
    </div>
</div>