@model BoookingHotels.Models.Blog
@{
    ViewData["Title"] = "Chi tiết Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    .blog-detail-card {
        border: none;
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        background: #fff;
    }

        .blog-detail-card img {
            max-height: 400px;
            object-fit: cover;
            width: 100%;
        }

    .blog-detail-title {
        font-weight: 800;
        font-size: 2rem;
        color: #003580;
        margin-bottom: 1rem;
    }

    .blog-meta {
        font-size: 0.9rem;
        color: #6c757d;
        margin-bottom: 1.5rem;
    }

        .blog-meta i {
            color: #febb02;
            margin-right: 0.3rem;
        }

    .blog-content {
        font-size: 1.05rem;
        line-height: 1.7;
        color: #444;
    }

    .blog-author {
        display: flex;
        align-items: center;
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid #eee;
    }

        .blog-author img {
            border-radius: 50%;
            margin-right: 0.75rem;
        }

    .btn-back {
        margin-top: 2rem;
        border-radius: 0.5rem;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-9">
            <div class="card blog-detail-card">
                <!-- Thumbnail -->
                <img src="@Model.Thumbnail" alt="@Model.Title" class="card-img-top" />

                <div class="card-body p-4">
                    <!-- Title -->
                    <h1 class="blog-detail-title">@Model.Title</h1>

                    <!-- Meta -->
                    <div class="blog-meta d-flex align-items-center">
                        <span class="me-3">
                            <i class="fa-regular fa-calendar"></i> @Model.CreatedDate.ToString("dd/MM/yyyy")
                        </span>
                        <span>
                            <i class="fa-solid fa-user-pen"></i> @Model.Author
                        </span>
                    </div>

                    <!-- Content -->
                    <div class="blog-content">
                        @Html.Raw(Model.Content?.Replace("\n", "<br/>"))
                    </div>

                    <!-- Author -->
                    <div class="blog-author">
                        <img src="/Image/avatar-admin.png" alt="@Model.Author" width="45" height="45" />
                        <div>
                            <div class="fw-semibold">@Model.Author</div>
                            <div class="text-muted small">Tác giả bài viết</div>
                        </div>
                    </div>

                    <!-- Back button -->
                    <a asp-action="Index" class="btn btn-outline-primary btn-back px-4">
                        <i class="fa-solid fa-arrow-left"></i> Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
