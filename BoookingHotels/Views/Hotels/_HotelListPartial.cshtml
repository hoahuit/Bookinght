@model IEnumerable<BoookingHotels.Models.Hotel>

<div class="row mt-4">
    @if (Model != null && Model.Any())
    {
        @foreach (var hotel in Model)
        {
            <div class="col-md-4 mb-4 d-flex" style="max-width:384px">
                <div class="card hotel-card w-100 h-100">
                    <img src="@(hotel.Photoss.FirstOrDefault()?.Url ?? "/images/default-hotel.jpg")"
                         class="hotel-img" alt="@hotel.Name" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mb-1">@hotel.Name</h5>
                        <div class="hotel-location">@hotel.City, @hotel.Country</div>
                        <div class="hotel-price">
                            @if (hotel.Rooms != null && hotel.Rooms.Any())
                            {
                                @:From @hotel.Rooms.Min(r => r.Price).ToString("N0") VND/night
                            }
                        </div>
                        <a asp-action="Details" asp-route-id="@hotel.HotelId"
                           class="btn btn-outline-primary view-details-btn mt-auto">View Details</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="text-center py-5">
            <h5 class="text-muted">Không có khách sạn nào phù hợp với tiêu chí tìm kiếm.</h5>
        </div>
    }
</div>
