@model BoookingHotels.Models.Room
@{
    ViewData["Title"] = "Edit Room";
}

<h2>Edit Room</h2>

<form asp-action="EditRoom" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="RoomId" />

    <div class="form-group mb-3">
        <label asp-for="HotelId"></label>
        <select asp-for="HotelId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Hotels, "HotelId", "Name", Model.HotelId))">
        </select>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Tiện ích</label><br />
        @foreach (var amenity in ViewBag.Amenities)
        {
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox"
                       name="amenityIds" value="@amenity.AmenityId"
                       @(Model.RoomAmenities.Any(ra => ra.AmenityId == amenity.AmenityId) ? "checked" : "") />
                <label class="form-check-label">@amenity.Name</label>
            </div>
        }
    </div>

    <div class="form-group mb-3">
        <label>Ảnh hiện tại:</label>
        <div class="d-flex flex-wrap gap-2">
            @foreach (var photo in Model.Photos)
            {
                <img src="@photo.Url" style="width:100px;height:100px;object-fit:cover;" />
            }
        </div>
    </div>

    <div class="form-group mb-3">
        <label>Thêm ảnh mới</label>
        <input type="file" name="images" class="form-control" multiple />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Rooms" class="btn btn-secondary">Cancel</a>
</form>
