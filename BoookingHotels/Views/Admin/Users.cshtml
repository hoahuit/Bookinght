@model IEnumerable<BoookingHotels.Models.User>
@{
    ViewData["Title"] = "Manage Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <h2 class="fw-bold text-primary mb-4"><i class="bi bi-people-fill"></i> Manage Users</h2>

    @if (TempData["success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }


    <div class="card shadow-sm rounded-4">
        <div class="card-body table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>UserName</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Roles</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in Model)
                    {
                        <tr>
                            <td>@u.UserId</td>
                            <td>@u.UserName</td>
                            <td>@u.Email</td>
                            <td>@u.Phone</td>
                            <td>
                                @string.Join(", ", u.UserRoles.Select(r => r.Role.RoleName))
                            </td>
                            <td>
                                @if (u.Status)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-action="EditUser" asp-route-id="@u.UserId" class="btn btn-sm btn-primary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="EditUserRoles" asp-route-id="@u.UserId" class="btn btn-sm btn-warning">
                                    <i class="bi bi-shield-lock"></i>
                                </a>
                                <a asp-action="DeleteUser" asp-route-id="@u.UserId" class="btn btn-sm btn-danger"
                                   onclick="return confirm('Are you sure to delete this user?');">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
