@model BoookingHotels.Models.Room
@{
    ViewData["Title"] = "Add New Room";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-success"><i class="bi bi-plus-circle"></i> Add New Room</h2>
        <a asp-action="Rooms" class="btn btn-secondary shadow-sm">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-4">
            <form asp-action="CreateRoom" method="post" enctype="multipart/form-data">
                <div class="row g-3">
                    <!-- Hotel -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Hotel <span class="text-danger">*</span></label>
                        <select asp-for="HotelId" class="form-select shadow-sm"
                                asp-items="@(new SelectList(ViewBag.Hotels, "HotelId", "Name"))">
                            <option value="">-- Select Hotel --</option>
                        </select>
                        <span asp-validation-for="HotelId" class="text-danger"></span>
                    </div>

                    <!-- Room Name -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Room Name <span class="text-danger">*</span></label>
                        <input asp-for="Name" class="form-control shadow-sm" placeholder="Enter room name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <!-- Capacity -->
                    <div class="col-md-4">
                        <label class="form-label fw-semibold">Capacity</label>
                        <input asp-for="Capacity" type="number" min="1" class="form-control shadow-sm" placeholder="2" />
                        <span asp-validation-for="Capacity" class="text-danger"></span>
                    </div>

                    <!-- Price -->
                    <div class="col-md-4">
                        <label class="form-label fw-semibold">Price (VND) <span class="text-danger">*</span></label>
                        <input asp-for="Price" type="number" step="1000" class="form-control shadow-sm" placeholder="1000000" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <!-- Bed Type -->
                    <div class="col-md-4">
                        <label class="form-label fw-semibold">Bed Type</label>
                        <input asp-for="BedType" class="form-control shadow-sm" placeholder="Queen / Twin / King" />
                        <span asp-validation-for="BedType" class="text-danger"></span>
                    </div>

                    <!-- Size -->
                    <div class="col-md-4">
                        <label class="form-label fw-semibold">Size (m²)</label>
                        <input asp-for="Size" type="number" min="10" class="form-control shadow-sm" placeholder="30" />
                        <span asp-validation-for="Size" class="text-danger"></span>
                    </div>

                    <!-- Status -->
                    <div class="col-md-4">
                        <label class="form-label fw-semibold">Status</label>
                        <select asp-for="Status" class="form-select shadow-sm">
                            <option value="true">Active</option>
                            <option value="false">Inactive</option>
                        </select>
                    </div>

                    <!-- Amenities -->
                    <div class="col-md-12">
                        <label class="form-label fw-semibold">Amenities</label>
                        <div class="row">
                            @foreach (var amenity in ViewBag.Amenities)
                            {
                                <div class="col-md-3 col-sm-4 col-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox"
                                               name="amenityIds" value="@amenity.AmenityId" id="amenity-@amenity.AmenityId" />
                                        <label class="form-check-label" for="amenity-@amenity.AmenityId">
                                            <i class="@amenity.Icon"></i> @amenity.Name
                                        </label>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Room Images -->
                    <div class="col-md-12">
                        <label class="form-label fw-semibold">Room Images</label>
                        <input type="file" name="images" multiple class="form-control shadow-sm" />
                        <small class="text-muted">You can select multiple images</small>
                    </div>
                </div>

                <!-- Submit -->
                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-primary fw-bold px-4 shadow-sm">
                        <i class="bi bi-save me-1"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
