@model BoookingHotels.Models.Voucher
@{
    ViewData["Title"] = "Tạo Voucher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <h2 class="fw-bold text-success mb-4">
        <i class="bi bi-plus-circle"></i> Tạo Voucher
    </h2>

    <form asp-action="CreateVoucher" method="post">
        <div class="mb-3">
            <label asp-for="Code" class="form-label">Mã Voucher</label>
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Mô tả</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="DiscountType" class="form-label">Loại</label>
            <select asp-for="DiscountType" class="form-select">
                <option value="Percent">Percent (%)</option>
                <option value="Amount">Amount (VND)</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="DiscountValue" class="form-label">Giá trị</label>
            <input asp-for="DiscountValue" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="MinOrderValue" class="form-label">Giá trị đơn tối thiểu</label>
            <input asp-for="MinOrderValue" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="ExpiryDate" class="form-label">Ngày hết hạn</label>
            <input asp-for="ExpiryDate" type="date" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Quantity" class="form-label">Số lượng</label>
            <input asp-for="Quantity" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">User (nếu chỉ định)</label>
            <select asp-for="UserId" class="form-select">
                <option value="">-- Public --</option>
                @if (ViewBag.Users != null)
                {
                    foreach (var u in ViewBag.Users)
                    {
                        <option value="@u.UserId">@u.UserName (@u.Email)</option>
                    }
                }
            </select>
        </div>

        <button type="submit" class="btn btn-success">Tạo</button>
        <a asp-action="Vouchers" class="btn btn-secondary">Quay lại</a>
    </form>
</div>
