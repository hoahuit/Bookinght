@model BoookingHotels.Models.Room
@{
    ViewData["Title"] = Model.Name;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="container py-5">
    <div class="row g-4">
        <!-- Phần ảnh -->
        <div class="col-lg-7">
            <div class="card shadow-sm border-0">
                <div id="roomCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner rounded-top">
                        @for (int i = 0; i < Model.Photos.Count; i++)
                        {
                            var photo = Model.Photos.ElementAt(i);
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <img src="@photo.Url" class="d-block w-100"
                                     style="height: 400px; object-fit: cover; cursor: zoom-in;"
                                     data-bs-toggle="modal" data-bs-target="#photoModal" data-bs-image="@photo.Url" />
                            </div>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#roomCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#roomCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </button>
                </div>
            </div>
        </div>

        <!-- Phần thông tin -->
        <div class="col-lg-5">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h2 class="card-title mb-2 fw-bold">@Model.Name</h2>
                    <p class="text-secondary mb-3">
                        <i class="fa-solid fa-hotel me-1"></i>
                        @Model.Hotel.Name - @Model.Hotel.City
                    </p>
                    <hr>
                    <div class="mb-3">
                        <h5 class="fw-semibold mb-2">Thông tin phòng</h5>
                        <ul class="list-unstyled mb-0">
                            <li><i class="fa-solid fa-users me-2 text-primary"></i>Công suất: <b>@Model.Capacity</b> người</li>
                            <li><i class="fa-solid fa-bed me-2 text-primary"></i>Giường: <b>@Model.BedType</b></li>
                            <li><i class="fa-solid fa-ruler-combined me-2 text-primary"></i>Kích thước: <b>@Model.Size</b> m²</li>
                            <li>
                                <i class="fa-solid fa-money-bill-wave me-2 text-primary"></i>
                                Giá: <span class="fw-bold text-success fs-5">@Model.Price.ToString("N0") VND</span> / đêm
                            </li>
                        </ul>
                    </div>
                    <div class="mb-3">
                        <h5 class="fw-semibold mb-2">Tiện nghi</h5>
                        <div>
                            @foreach (var amenity in Model.RoomAmenities.Select(ra => ra.Amenity))
                            {
                                <span class="badge bg-light text-dark border me-1 mb-1 shadow-sm">
                                    <i class="fa-solid fa-circle-check text-success me-1"></i>@amenity.Name
                                </span>
                            }
                        </div>
                    </div>
                    <a asp-controller="Bookings" asp-action="Create" asp-route-roomId="@Model.RoomId"
                       class="btn btn-primary btn-lg w-100 mt-3 shadow">
                        <i class="fa-solid fa-calendar-check me-2"></i>Đặt phòng ngay
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Reviews -->
    <div class="row mt-5">
        <div class="col-lg-12">
            <h3 class="fw-bold mb-3"><i class="fa-solid fa-comments"></i> Đánh giá</h3>

            @if (Model.Reviews != null && Model.Reviews.Any())
            {
                foreach (var rv in Model.Reviews.OrderByDescending(r => r.CreatedAt))
                {
                    <div class="card mb-3 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <h6 class="fw-bold">@rv.User.UserName (@rv.User.Email)</h6>
                                <span>
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="fa-star @(i <= rv.Rating ? "fas text-warning" : "far text-muted")"></i>
                                    }
                                </span>
                            </div>
                            <p>@rv.Comment</p>
                            @if (rv.Photos != null && rv.Photos.Any())
                            {
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var p in rv.Photos)
                                    {
                                        <img src="@p.Url" style="width:100px; height:80px; object-fit:cover;" class="rounded shadow-sm" />
                                    }
                                </div>
                            }
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-muted">Chưa có đánh giá nào cho phòng này.</p>
            }
        </div>
    </div>
</div>

<!-- Modal hiển thị ảnh lớn -->
<div class="modal fade" id="photoModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content bg-transparent border-0">
            <img id="modalImage" class="img-fluid rounded shadow" style="max-height:90vh; object-fit:contain;" />
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const photoModal = document.getElementById('photoModal');
        photoModal.addEventListener('show.bs.modal', function (event) {
            const img = event.relatedTarget;
            const imageUrl = img.getAttribute('data-bs-image');
            document.getElementById('modalImage').src = imageUrl;
        });
    </script>
}
