<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BoookingHotels</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BoookingHotels.styles.css" asp-append-version="true" />
    <style>
        :root {
            --primary-color: #003580;
            --secondary-color: #0071c2;
            --accent-color: #febb02;
            --footer-bg: #001d3d;
        }

        body {
            background-color: #f8fafc;
            font-family: 'Segoe UI', 'Roboto', Arial, sans-serif;
        }

        /* Navbar */
        .navbar {
            background: var(--primary-color);
            box-shadow: 0 2px 8px rgba(0,0,0,0.04);
        }

        .navbar-brand {
            font-weight: 800;
            color: #fff !important;
            font-size: 2rem;
            letter-spacing: 1px;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .nav-link {
            color: #fff !important;
            font-weight: 500;
            transition: background 0.2s, color 0.2s;
            border-radius: 6px;
        }

            .nav-link:hover, .nav-link.active {
                background: var(--accent-color);
                color: #003580 !important;
            }

        .user-menu {
            background: #fff;
            color: var(--primary-color);
            padding: 0.5rem 1.2rem;
            border-radius: 6px;
            font-weight: 600;
            border: none;
            box-shadow: 0 2px 8px rgba(0,0,0,0.06);
        }

            .user-menu:focus {
                outline: 2px solid var(--accent-color);
            }

        /* Hero Section */
        .hero-section {
            background: linear-gradient(rgba(0,53,128,0.7), rgba(0,53,128,0.7)), url('/images/hero-bg.jpg') center/cover no-repeat;
            min-height: 300px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff;
            text-align: center;
            padding: 2rem 1rem 1rem 1rem;
            border-radius: 0 0 2rem 2rem;
            margin-bottom: 2rem;
        }

        .hero-title {
            font-size: 2rem;
            font-weight: 800;
            margin-bottom: 1rem;
        }

        .hero-desc {
            font-size: 1.1rem;
            font-weight: 400;
            margin-bottom: 1.5rem;
        }

        /* Main Content */
        .main-content {
            flex: 1 0 auto;
            min-height: 60vh;
        }

        /* Footer */
        .footer {
            flex-shrink: 0;
            background: var(--footer-bg);
            color: #fff;
            padding: 2rem 0 1rem 0;
            margin-top: 3rem;
            border-radius: 2rem 2rem 0 0;
        }

            .footer h5 {
                font-weight: 700;
                margin-bottom: 1rem;
            }

        .footer-links {
            list-style: none;
            padding: 0;
        }

            .footer-links li {
                margin-bottom: 0.5rem;
            }

            .footer-links a {
                color: #fff;
                text-decoration: none;
                transition: color 0.2s;
            }

                .footer-links a:hover {
                    color: var(--accent-color);
                    text-decoration: underline;
                }

        .footer .copyright {
            font-size: 0.95rem;
            opacity: 0.8;
        }

        /* Simple responsive without media query */
        .container, .row, .col-md-4 {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            box-sizing: border-box;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
        }

        .col-md-4 {
            flex: 1 1 33.3333%;
            padding: 1rem;
        }

        }
        /* Stack columns on small screens */
        [class*="col-"] {
            min-width: 0;
        }

        .footer .row > div {
            min-width: 220px;
        }
        /* For very small screens, stack columns */
        html, body {
            height: 100%;
            min-width: 320px;
            margin: 0;
            padding: 0;
        }

        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .main-content {
            flex: 1 0 auto;
        }

        .footer {
            flex-shrink: 0; /* footer không bị co lại */
            background: var(--footer-bg, #001d3d);
            color: #fff;
            padding: 1.5rem 0;
            text-align: center;
            border-radius: 2rem 2rem 0 0;
            position: relative !important;
        }

        .navbar-toggler {
            border: none;
        }

        /* Booking.com Navbar and Hero Section */
        .booking-navbar {
            background: #003580;
            padding: 1rem 0;
        }

            .booking-navbar .navbar-brand {
                color: #fff !important;
                letter-spacing: 1px;
            }

            .booking-navbar .btn-outline-primary {
                border-color: #fff;
                color: #fff;
                background: transparent;
            }

                .booking-navbar .btn-outline-primary:hover {
                    background: #fff;
                    color: #003580;
                    border-color: #fff;
                }

        .booking-hero {
            background: #003580;
            color: #fff;
            padding: 2.5rem 0 2rem 0;
            text-align: left;
            border-radius: 0 0 2rem 2rem;
            margin-bottom: 2rem;
        }

        .booking-hero-title {
            font-size: 2.5rem;
            font-weight: 800;
            margin-bottom: 0.5rem;
        }

        .booking-hero-desc {
            font-size: 1.2rem;
            margin-bottom: 2rem;
        }

        .booking-searchbox {
            background: #fff;
            border-radius: 0.75rem;
            box-shadow: 0 2px 16px rgba(0,0,0,0.08);
            padding: 1rem;
            margin-top: -2rem;
            position: relative;
            z-index: 2;
        }

            .booking-searchbox input.form-control {
                border-radius: 0.5rem;
                border: 1.5px solid #febb02;
            }

            .booking-searchbox .btn-primary {
                background: #0071c2;
                border: none;
                border-radius: 0.5rem;
                font-weight: 600;
            }

      
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg booking-navbar">
            <div class="container">
                  @if (User.Identity != null && User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
                    {
                           <a asp-controller="Auth" asp-action="Index" class="navbar-brand fw-bold fs-3">
                            Booking.com
                        </a>
                    }
                @if (User.Identity != null && User.Identity.IsAuthenticated && User.IsInRole("Admin")){
                <a asp-controller="Admin" asp-action="Index" class="navbar-brand fw-bold fs-3">
                    Booking.com
                </a>
                    }
                <div class="d-flex align-items-center gap-2 ms-auto">
              
                    @if (User.Identity != null && User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
                    {
                        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                      
                            <li class="nav-item">
                                <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Hotels" asp-action="Index" class="nav-link">Hotels</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Blogs" asp-action="Index" class="nav-link">Blogs</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Reviews" asp-action="MyReviews" class="nav-link">My Reviews</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Vouchers" asp-action="MyVouchers" class="nav-link">My Vouchers</a>
                            </li>

                            <li class="nav-item">
                                <a asp-controller="Bookings" asp-action="MyBookings" class="nav-link">My Bookings</a>
                            </li>
                        </ul>
                      <div class="dropdown">
                            <button class="btn user-menu dropdown-toggle" type="button" id="userMenu"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle"></i> @User.Identity.Name
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="userMenu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Auth" asp-action="Profile">
                                        <i class="bi bi-person-lines-fill"></i> Profile
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item text-danger" asp-controller="Auth" asp-action="Logout">
                                        <i class="bi bi-box-arrow-right"></i> Logout
                                    </a>
                                </li>
 

                            </ul>
                        </div> 
                    }
                    @if (User.Identity != null && User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <div class="dropdown">
                            <button class="btn user-menu dropdown-toggle" type="button" id="userMenu"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle"></i> @User.Identity.Name
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="userMenu">
                    
                                <li>
                                    <a class="dropdown-item text-danger" asp-controller="Auth" asp-action="Logout">
                                        <i class="bi bi-box-arrow-right"></i> Logout
                                    </a>
                                </li>


                            </ul>
                        </div>
                    }
                    @if (User.Identity != null && !User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Auth" asp-action="Register" class="btn btn-outline-primary me-2">Register</a>
                        <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-primary">Sign in</a>
                    }
                </div>
            </div>
        </nav>
    </header>


    <div class="container main-content">
        <main role="main">
            @RenderBody()

    
        </main>
    </div>
    <div aria-live="polite" aria-atomic="true" class="position-fixed bottom-0 end-0 p-3" style="z-index: 1080;">
        @if (TempData["success"] != null)
        {
            <div class="toast align-items-center text-white bg-success border-0 show" role="alert" id="successToast">
                <div class="d-flex">
                    <div class="toast-body">
                        <i class="bi bi-check-circle-fill me-2"></i> @TempData["success"]
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto"
                            data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        }

        @if (TempData["error"] != null)
        {
            <div class="toast align-items-center text-white bg-danger border-0 show" role="alert" id="errorToast">
                <div class="d-flex">
                    <div class="toast-body">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["error"]
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto"
                            data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        }
    </div>

    <footer class="footer mt-5">
        <div class="container">

            <hr class="footer-divider" />

            <!-- Chính sách hủy -->
            <div class="text-center mb-3">
                <p class="fw-semibold">
                    Chính sách huỷ: Miễn phí trước <span class="text-success">3 ngày</span> so với ngày nhận phòng.
                    Sau đó chúng tôi sẽ tính <span class="text-danger">50% giá trị đặt phòng</span>.
                    Liên hệ hỗ trợ: <a href="tel:+84123456789" class="fw-bold text-primary">0123 456 789</a>
                </p>
            </div>
            <div class="row">
                <!-- Cột 1: Về chúng tôi -->
                <div class="col-md-3 col-sm-6 mb-4">
                    <h5>Về BoookingHotels</h5>
                    <ul class="footer-links">
                        <li><a href="#">Giới thiệu</a></li>
                        <li><a href="#">Tuyển dụng</a></li>
                        <li><a href="#">Tin tức</a></li>
                        <li><a href="#">Liên hệ</a></li>
                    </ul>
                </div>

                <!-- Cột 2: Hỗ trợ -->
                <div class="col-md-3 col-sm-6 mb-4">
                    <h5>Hỗ trợ</h5>
                    <ul class="footer-links">
                        <li><a href="#">Trung tâm trợ giúp</a></li>
                        <li><a href="#">Hướng dẫn đặt phòng</a></li>
                        <li><a href="#">Chính sách bảo mật</a></li>
                        <li><a href="#">Điều khoản dịch vụ</a></li>
                    </ul>
                </div>

                <!-- Cột 3: Khám phá -->
                <div class="col-md-3 col-sm-6 mb-4">
                    <h5>Khám phá</h5>
                    <ul class="footer-links">
                        <li><a href="#">Khách sạn</a></li>
                        <li><a href="#">Căn hộ</a></li>
                        <li><a href="#">Resort</a></li>
                        <li><a href="#">Villa</a></li>
                    </ul>
                </div>

                <!-- Cột 4: Theo dõi -->
                <div class="col-md-3 col-sm-6 mb-4">
                    <h5>Theo dõi chúng tôi</h5>
                    <div class="social-icons">
                        <a href="#"><i class="bi bi-facebook"></i></a>
                        <a href="#"><i class="bi bi-instagram"></i></a>
                        <a href="#"><i class="bi bi-twitter-x"></i></a>
                        <a href="#"><i class="bi bi-youtube"></i></a>
                    </div>
                </div>
            </div>

            <hr class="footer-divider" />

            <div class="text-center copyright">
                <p class="mb-0">&copy; 2025 BoookingHotels. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const successToast = document.getElementById("successToast");
        const errorToast = document.getElementById("errorToast");

        if (successToast) {
            const toast = new bootstrap.Toast(successToast, { delay: 3000 });
            toast.show();
        }

        if (errorToast) {
            const toast = new bootstrap.Toast(errorToast, { delay: 3000 });
            toast.show();
        }
    });
</script>
