@{
    ViewData["Title"] = "Xác thực OTP";
    var email = TempData["Email"] as string;
}

<div class="container mt-5" style="max-width: 500px;">
    <div class="card shadow border-0">
        <div class="card-body">
            <h3 class="card-title text-center mb-4">Xác thực Email</h3>
            <p class="text-muted text-center">Mã OTP đã được gửi tới <strong>@email</strong>. Vui lòng kiểm tra email và nhập mã OTP bên dưới.</p>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            <form asp-action="VerifyOtp" method="post">
                <div class="mb-3">
                    <label class="form-label">Mã OTP</label>
                    <input type="text" name="otp" class="form-control" required placeholder="Nhập mã 6 chữ số">
                </div>

                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-shield-lock"></i> Xác nhận
                </button>
            </form>

            <div class="text-center mt-3">
                <form asp-action="ResendOtp" method="post">
                    <input type="hidden" name="email" value="@email" />
                    <button type="submit" class="btn btn-link">Gửi lại mã OTP</button>
                </form>
            </div>
        </div>
    </div>
</div>
